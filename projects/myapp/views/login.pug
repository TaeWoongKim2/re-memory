extends layout

block append head
  link(rel='stylesheet' href='/stylesheets/login.css')

block content
  .container
    .row
      .col-sm-9.col-md-7.col-lg-5.mx-auto
        .card.card-signin.my-5
          .card-body
            h6.gohome
              a(href='/')
                i.fas.fa-home
            
            h5.card-title.text-center Sign In
            form.form-signin(method='post' action="/login")
              .form-label-group
                input#inputID.form-control(type='text' name='uid' placeholder='ID' required autofocus)
                label(for='inputID') ID

              .form-label-group
                input#inputPassword.form-control(type='password' name='pwd' placeholder='Password' required)
                label(for='inputPassword') Password

              .custom-control.custom-checkbox.mb-3
                input#customCheck1.custom-control-input(type='checkbox')
                label.custom-control-label(for='customCheck1') Remember password

              button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Sign in
              a.d-block.text-center.mt-2.small(href='/sign-up') Sign Up
              hr.my-4
              button.btn.btn-lg.btn-google.btn-block.text-uppercase(type='submit') 
                i.fab.fa-google.mr-2 &nbsp;&nbsp;Sign up with Google
              button.btn.btn-lg.btn-facebook.btn-block.text-uppercase(type='submit') 
                i.fab.fa-facebook-f.mr-2 &nbsp;&nbsp;Sign up with Facebook
